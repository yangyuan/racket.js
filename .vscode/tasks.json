    "version": "0.1.0",
    "command": "tsc",
    "isShellCommand": true,
    "args": [],
    "showOutput":"always",
    "problemMatcher": "$tsc",
    "tasks": [
        {
            "taskName": "Build",
            "isBuildCommand": true,
            "args": ["-p", "./src"],
            "suppressTaskName": true
        },
        {
            "taskName": "Test",
            "isTestCommand": true, 
            "args": ["-p", "."],
            "suppressTaskName": true
        }
    ]
    
}